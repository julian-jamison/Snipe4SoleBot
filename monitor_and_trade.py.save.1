def send_telegram_message(message):
    """Send message to Telegram."""
    try:
        loop = asyncio.get_running_loop()
        loop.create_task(safe_send_telegram_message(message))
    except RuntimeError:
        asyncio.run(safe_send_telegram_message(message))

